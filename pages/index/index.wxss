.leader_view{
  height: 100%;
  width: 100%;
  margin: 0;
  border: 0;
  padding: 0;
  
}
page{
 height: 100%;
 width: 100%;
}
.homeView{
  height: 100%;
  width: 100%;
  background-color: #eeeeee;
}
.homeTitle{
    font-family: "CangErYu";
    padding: 35px 20px 15px 20px;
    font-weight: 300;
    background: #42a5f5;
    color: white;
}
.homeGrid{
  margin-top: 0px;
  display: block;
}
.tableTitle{
    display: flex;
    justify-content: center;
    text-align: center;
    align-items: center;
    color: #bbbbbb;
    font-weight: bold;
}
.index_image{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
.newButton{
    display: flex;
    background: #42a5f5;
    color: white;
    border-radius: 5px;
    text-align: center;
    padding: 10px 20px;
    align-content: space-around;
    align-items: center;
    margin: 5px;
}
.areaStyle{
    padding-top: 20px;
    align-content: space-around;
    width: 100%;
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
}
.writeButton{
    display: flex;
    background: #fbc628;
    color: white;
    border-radius: 5px;
    text-align: center;
    padding: 10px 20px;
    align-content: space-around;
    align-items: center;
    margin: 5px;
}
.trend{
    display: flex;
    background: #209140;
    color: white;
